    <!-- Back to Top -->
    <a href="#" class="btn btn-success back-to-top"><i class="fa fa-angle-double-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="~/www/lib/easing/easing.min.js"></script>
    <script src="~/www/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Contact Javascript File -->
    <script src="~/www/mail/jqBootstrapValidation.min.js"></script>
    <script src="~/www/mail/contact.js"></script>

    <!-- Template Javascript -->
    <script src="~/www/js/main.js"></script>
</body>
</html>
